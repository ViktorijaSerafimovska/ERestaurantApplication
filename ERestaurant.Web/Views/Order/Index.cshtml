@model IEnumerable<ERestaurant.Domain.DomainModels.Order>
@{
    ViewData["Title"] = "Orders";
}

<div class="page-header mb-4" style="background: linear-gradient(135deg, #dc3545, #ff9f43); color: white; padding: 2rem 0; border-radius: 0 0 15px 15px;">
    <div class="container d-flex justify-content-between align-items-center">
        <h1><i class="fas fa-receipt me-3"></i>Orders</h1>
        <a class="btn btn-light rounded-pill" asp-action="Create">
            <i class="fas fa-plus me-2"></i>Place Order
        </a>
    </div>
</div>

<div class="container">
    <div class="row">
        @foreach (var order in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>
                            <i class="fas fa-user me-2"></i>
                            @(order.Customer?.FirstName ?? "Unknown") @(order.Customer?.LasttName ?? "")
                        </span>
                        <span class="fw-bold text-primary">$@order.TotalPrice</span>
                    </div>
                    <div class="card-body">
                        <p><i class="fas fa-calendar-alt me-2"></i>@order.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
                        <p>
                            <strong>Menu Items:</strong>
                            <ul>
                                @foreach (var item in order.OrderItems ?? new List<ERestaurant.Domain.DomainModels.OrderItem>())
                                {
                                    <li>@item.MenuItem?.Name - $@item.MenuItem?.Price</li>
                                }
                            </ul>
                        </p>
                        <p>
                            <strong>Status:</strong>
                            @if (order.Status == "Completed")
                            {
                                <span class="badge bg-success">@order.Status</span>
                            }
                            else if (order.Status == "Pending")
                            {
                                <span class="badge bg-warning text-dark">@order.Status</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@order.Status</span>
                            }
                        </p>

                        <div class="d-flex justify-content-end mt-3">
                            <a class="btn btn-sm btn-outline-info me-1" asp-action="Details" asp-route-id="@order.Id"><i class="fas fa-eye"></i></a>
                            <a class="btn btn-sm btn-outline-warning me-1" asp-action="Edit" asp-route-id="@order.Id"><i class="fas fa-edit"></i></a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@order.Id"><i class="fas fa-trash"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
