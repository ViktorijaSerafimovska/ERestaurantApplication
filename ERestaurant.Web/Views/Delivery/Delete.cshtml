@using ERestaurant.Domain.DomainModels
@model Delivery
@{
    ViewData["Title"] = "Delete Delivery";
}
<h2>Delete Delivery</h2>
<p>Are you sure you want to delete this delivery?</p>

<dl class="row">
    <dt class="col-sm-2">OrderId</dt>
    <dd class="col-sm-10">@Model.OrderId</dd>
    <dt class="col-sm-2">Address</dt>
    <dd class="col-sm-10">@Model.DeliveryAddress</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button class="btn btn-danger" type="submit">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
