@{
    ViewData["Title"] = "Create Delivery";
    var orders = ViewBag.Orders as SelectList;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header text-white" style="background: linear-gradient(135deg, #17a2b8, #dc3545);">
                    <h3><i class="fas fa-truck me-2"></i>Create Delivery</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label fw-bold">Order</label>
                            <select name="orderId" class="form-select" asp-items="orders" required>
                                <option value="">-- Select Order --</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Delivery Address</label>
                            <input name="deliveryAddress" class="form-control" placeholder="Enter delivery address" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Estimated Delivery Time</label>
                            <input name="estimatedDeliveryTime" type="datetime-local" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Status</label>
                            <input name="status" class="form-control" value="Preparing" />
                        </div>

                        <div class="d-flex justify-content-start mt-3">
                            <button type="submit" class="btn btn-primary me-2" style="background: linear-gradient(to right, #17a2b8, #dc3545); border:none; border-radius:30px; font-weight:600;">
                                <i class="fas fa-check me-1"></i>Save Delivery
                            </button>
                            <a asp-action="Index" class="btn btn-secondary" style="border-radius:30px; font-weight:600;">
                                <i class="fas fa-arrow-left me-1"></i>Back
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
