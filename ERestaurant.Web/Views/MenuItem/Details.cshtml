@using ERestaurant.Domain.DomainModels
@model MenuItem
@{
    ViewData["Title"] = "Menu Item Details";
}
<h2>Menu Item Details</h2>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Category</dt>
    <dd class="col-sm-10">@Model.Category</dd>
    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.Price</dd>
    <dt class="col-sm-2">Available</dt>
    <dd class="col-sm-10">@Model.IsAvailable</dd>
    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>
</dl>

<a asp-action="Index" class="btn btn-secondary">Back</a>
